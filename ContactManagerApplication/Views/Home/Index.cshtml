@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager
@{
    ViewData["Title"] = "Home Page";
}

<body class="bg-image" style="background-image: url('/images/image3.jpg'); background-size: cover; background-repeat: no-repeat; background-position: center;">
    <div class="text-center">

        <h1 class="display-4" fw-bold style="font-size: 4rem; color: white ;">Welcome To Contact Manager Application</h1>
        <br />
        <h3 fw-bold style=" color: white;">Effortlessly Manage Your contacts</h3>
        <br />
        <p fw-bold style=" color:white;">Stay Organized and Build Stronger Relationships with Our All-in-One Contact Management Solution</p>
        <br /><br />

        @if (!User.Identity.IsAuthenticated)
        {
            <button style="
        background-color: ghostwhite;
        color: white;
        font-size: 1.5rem;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        animation: blink 1s infinite;
        transition: background-color 0.3s, transform 0.3s;
            " onmouseover="this.style.backgroundColor='white'; this.style.transform='scale(1.1)';" onmouseout="this.style.backgroundColor='white'; this.style.transform='scale(1)';">
                <a asp-area="Identity" asp-page="/Account/Register" style="color: black; text-decoration: none;">click here to Register</a>
            </button>
        }

    </div>

</body>